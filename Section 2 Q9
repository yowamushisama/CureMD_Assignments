//Section 2 Q9
Console.WriteLine("Please enter a number: ");
int num = int.Parse(Console.ReadLine());
int product = 1;
if (num == 1 || num == 0)
{
    Console.WriteLine("The factorial of "+num+" is "+1);
} else { 
for (int i = num; i > 0; i--)
{
    
    product *= i;//for example if num is 3,it is 3*2*1
}
Console.WriteLine("The factorial of "+num+" is "+product);
}
