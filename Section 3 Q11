using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace PTactice
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Please enter a number: ");
          int checkNum = int.Parse(Console.ReadLine());
          int[] A = {1,2,3,4,5};
          int numberAvailable = 0;

          for(int i = 0;i<A.Length;i++){
             if(checkNum == A[i]){
                numberAvailable = 1;
                Console.WriteLine("The number "+(i+1)+" is available");
                break;
                } 
            } 
          if(numberAvailable == 0 ){
            Console.WriteLine("The number "+checkNum+" is not available");

            }
          
          Console.ReadKey();
    }
} 
}


