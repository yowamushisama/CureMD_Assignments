using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Section_4_Q18
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Please enter a number: ");
            int inputNumber = int.Parse(Console.ReadLine());
            int sum = 0;
            for(int i =1;i< inputNumber; i++)
            {
                if(inputNumber % i == 0)
                {
                    sum+= i;
                }

            }
            if(sum == inputNumber)
            {
                Console.WriteLine("The number is perfect : "+ inputNumber);
            } else
            {
                Console.WriteLine("The number is not perfect number: " + inputNumber);
            }
            Console.ReadKey();
        }
    }
}
