using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Section3_Q13
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int[] unsortedArray = { 5,1,7,6,11 };
            int max = unsortedArray[0]; int min = unsortedArray[0]; // Declare variables for maximum and minimum
            for(int i = 0; i < unsortedArray.Length; i++)
            {
                if(unsortedArray[i] > max)
                {
                    max = unsortedArray[i];
                }
                if (unsortedArray[i] < min)
                {
                    min = unsortedArray[i];
                }
            }
            Console.WriteLine("The largest number of array is: "+max);
            Console.WriteLine("The smallest number of array is: " + min);
            Console.ReadKey();

        }
    }
}
